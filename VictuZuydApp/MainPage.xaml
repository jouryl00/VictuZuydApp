<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VictuZuydApp.MainPage">

    <ContentPage.Content>
        <Grid RowSpacing="20" ColumnSpacing="0" Padding="20">
            <!-- Centered layout -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Page Title -->
            <Label 
                Grid.Row="0"
                Text="Welcome Back"
                FontSize="30"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="#333" />

            <!-- Form Section -->
            <VerticalStackLayout 
                Grid.Row="1" 
                Padding="20" 
                Spacing="15"
                BackgroundColor="White">

                <!-- Username Entry -->
                <VerticalStackLayout>
                    <Label Text="Username" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#555" />
                    <Entry x:Name="UsernameEntry" 
                           Placeholder="Enter your username" 
                           PlaceholderColor="#aaa"
                           FontSize="14"
                           TextColor="#333"
                           BackgroundColor="#f0f0f0"
/>
                </VerticalStackLayout>

                <!-- Password Entry -->
                <VerticalStackLayout>
                    <Label Text="Password" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#555" />
                    <Entry x:Name="PasswordEntry" 
                           Placeholder="Enter your password" 
                           IsPassword="True"
                           PlaceholderColor="#aaa"
                           FontSize="14"
                           TextColor="#333"
                           BackgroundColor="#f0f0f0"/>
                </VerticalStackLayout>

                <!-- Login Button -->
                <Button x:Name="LoginButton" 
                        Text="Login" 
                        FontSize="16" 
                        TextColor="White" 
                        BackgroundColor="#4CAF50"
                        Padding="10"
                        FontAttributes="Bold"
                        Clicked="LoginButton_Clicked" />

            </VerticalStackLayout>
        </Grid>
    </ContentPage.Content>

</ContentPage>
